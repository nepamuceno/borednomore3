#!/bin/bash
set -e

case "$1" in
    remove|upgrade|deconfigure)
        # Stop any running instances
        if command -v pkill >/dev/null 2>&1; then
            pkill -f "borednomore3.py" 2>/dev/null || true
            pkill -f "bnm3.py" 2>/dev/null || true
        fi
        ;;
        
    failed-upgrade)
        ;;
        
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
