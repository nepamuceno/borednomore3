#!/bin/sh
set -e

case "$1" in
    configure)
        echo "Finalizing BoredNoMore3 installation..."
        
        # Set permissions for the shared wallpaper directory
        if [ -d /usr/share/borednomore3/wallpapers ]; then
            chmod 777 /usr/share/borednomore3/wallpapers
        fi

        # Update desktop database for the GUIs
        if [ -x /usr/bin/update-desktop-database ]; then
            update-desktop-database -q
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
